<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/modalBottomSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageCamera"
        android:layout_width="@dimen/card_post_24"
        android:layout_height="@dimen/card_post_24"
        android:layout_marginStart="@dimen/card_post_16"
        android:layout_marginTop="@dimen/card_post_24"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_menu_camera"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textCamera"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/card_post_24"
        android:text="@string/camera"
        android:textColor="@color/black"
        android:textSize="@dimen/card_post_16"
        app:layout_constraintBottom_toBottomOf="@+id/imageCamera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageCamera"
        app:layout_constraintTop_toTopOf="@+id/imageCamera"
        tools:ignore="SpUsage" />


    <ImageView
        android:id="@+id/imageGallery"
        android:layout_width="@dimen/card_post_24"
        android:layout_height="@dimen/card_post_24"
        android:layout_marginStart="@dimen/card_post_16"
        android:layout_marginBottom="@dimen/card_post_24"
        android:layout_marginTop="@dimen/card_post_24"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageCamera" />

    <TextView
        android:id="@+id/textGallery"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/card_post_24"
        android:text="@string/gallery"
        android:textColor="@color/black"
        android:textSize="@dimen/card_post_16"
        app:layout_constraintBottom_toBottomOf="@+id/imageGallery"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageGallery"
        app:layout_constraintTop_toTopOf="@+id/imageGallery"
        tools:ignore="SpUsage" />

</androidx.constraintlayout.widget.ConstraintLayout>